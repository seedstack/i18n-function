{
  "id": "i18n-addon",
  "name": "SeedStack internationalization add-on",
  "author": "Yves DAUTREMAY, Adrien LAUER, Kavi RAMYEAD and Pierre THIROUIN",
  "modules": {
    "style": {
      "path": "[css]!{i18n-addon}/style/i18n.css",
      "autoload": true
    },
    "i18nTranslator": {
      "path": "{i18n-addon}/modules/i18nTranslator",
      "autoload": true,
      "config": {
        "apiPrefix": "${seed-rest-path-slash:}seed-i18n"
      }
    }
  },
  "i18n": {
    "": [
      "${seed-rest-path-slash:}seed-i18n/messages/:culture"
    ]
  },
  "routes": {
    "keys": {
      "templateUrl": "{i18n-addon}/views/keys.html",
      "controller": "SeedI18nKeysController",
      "security": "hasPermission('seed-w20', ['seed','i18n','key','read'])",
      "hidden": true
    },
    "translate": {
      "templateUrl": "{i18n-addon}/views/translate.html",
      "controller": "SeedI18nTranslateController",
      "security": "hasPermission('seed-w20', ['seed','i18n','translation','read'])",
      "hidden": true
    },
    "i18n": {
      "templateUrl": "{i18n-addon}/views/dashboard.html",
      "controller": "SeedI18nDashboardController",
      "security": "hasPermission('seed-w20', ['seed','i18n','locale','read'])"
    },
    "statistic": {
      "templateUrl": "{i18n-addon}/views/statistic.html",
      "controller": "SeedI18nStatisticController",
      "security": "hasPermission('seed-w20', ['seed','i18n','translation','read'])",
      "hidden": true
    }
  },
  "requireConfig": {
    "shim": {
      "{dropzone}/dropzone-amd-module": [
        "jquery"
      ]
    },
    "paths": {
      "{dropzone}": "${components-path:node_modules}/dropzone/dist"
    }
  }
}
